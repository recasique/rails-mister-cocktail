<div class='container'>
  <h2><%= @cocktail.name %></h2>
    <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %> </p>
  <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
</div>
<% end %>


<%= render 'doses/new', dose: @dose, cocktail: @cocktail %>

